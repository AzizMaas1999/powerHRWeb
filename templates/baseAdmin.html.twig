  <!-- Additional JavaScript for sidebar toggle and card functionality -->
  <script>
    // Initialize all popovers
    document.addEventListener('DOMContentLoaded', function() {
        // Enable feather icons
        feather.replace();
        
        // Initialize animation for dashboard cards
        const dashboardCards = document.querySelectorAll('.card');
        if (dashboardCards) {
            dashboardCards.forEach(card => {
                card.classList.add('card-dashboard');
            });
        }

        // Sidebar toggle functionality
        const sidebarToggle = document.getElementById('sidebar-hide');
        if (sidebarToggle) {
            sidebarToggle.addEventListener('click', function() {
                document.body.classList.toggle('minimenu');
                
                const sidebar = document.querySelector('.pc-sidebar');
                if (sidebar) {
                    sidebar.classList.toggle('mob-sidebar-active');
                }
            });
        }
        
        // Submenu toggle for mobile devices
        const submenus = document.querySelectorAll('.pc-hasmenu > a');
        if (submenus) {
            submenus.forEach(submenu => {
                submenu.addEventListener('click', function(e) {
                    if (window.innerWidth <= 991) {
                        e.preventDefault();
                        this.parentElement.classList.toggle('pc-trigger');
                    }
                });
            });
        }
    });
  </script>

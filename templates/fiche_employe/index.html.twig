{% extends 'base.html.twig' %}

{% block title %}FicheEmploye index{% endblock %}

{% block body %}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>FicheEmploye index</h1>
        <a href="{{ path('app_employe_new') }}" class="btn btn-success">
            <i class="fas fa-plus"></i> Create new
        </a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Cin</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>Adresse</th>
                <th>City</th>
                <th>Zip</th>
                <th>NumTel</th>
                <th>CvPdfUrl</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for fiche_employe in fiche_employes %}
            <tr>
                <td>{{ fiche_employe.id }}</td>
                <td>{{ fiche_employe.cin }}</td>
                <td>{{ fiche_employe.nom }}</td>
                <td>{{ fiche_employe.prenom }}</td>
                <td>{{ fiche_employe.email }}</td>
                <td>{{ fiche_employe.adresse }}</td>
                <td>{{ fiche_employe.city }}</td>
                <td>{{ fiche_employe.zip }}</td>
                <td>{{ fiche_employe.numTel }}</td>
                <td>{{ fiche_employe.cvPdfUrl }}</td>
                <td>
                    <a href="{{ path('app_fiche_employe_delete', {'id': fiche_employe.id}) }}" class="btn btn-outline-primary btn-sm me-1" title="delete">
                    <i class="fas fa-eye"></i>
                    <a href="{{ path('app_fiche_employe_edit', {'id': fiche_employe.id}) }}" class="btn btn-outline-secondary btn-sm" title="Edit">
                    <i class="fas fa-edit"></i>    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_fiche_employe_new') }}">Create new</a>
{% endblock %}

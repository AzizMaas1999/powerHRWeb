    <form method="post">
        <div class="mb-3">
            <label for="message" class="form-label">Votre message :</label>
            <textarea id="message" name="message" class="form-control" rows="4" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Envoyer</button>
    </form>


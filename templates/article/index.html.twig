{% extends 'base.html.twig' %}

{% block title %}Liste des Articles{% endblock %}

{% block body %}
    <div class="container my-5 bg-dark text-white p-4 rounded shadow">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3">Liste des Articles</h1>
            <a href="{{ path('app_article_new') }}" class="btn btn-success">➕ Nouvel Article</a>
        </div>

        <table class="table table-dark table-striped table-hover rounded overflow-hidden">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Description</th>
                    <th scope="col">Quantité</th>
                    <th scope="col">Prix Unitaire</th>
                    <th scope="col">TVA (%)</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for article in articles %}
                    <tr>
                        <th scope="row">{{ article.id }}</th>
                        <td>{{ article.description }}</td>
                        <td>{{ article.quantity }}</td>
                        <td>{{ article.prixUni | number_format(2, '.', ' ') }} €</td>
                        <td>{{ article.TVA }}%</td>
                        <td>
                            <a href="{{ path('app_article_show', {'id': article.id}) }}" class="btn btn-sm btn-outline-light">Voir</a>
                            <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn btn-sm btn-outline-warning">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center text-muted">Aucun article trouvé.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

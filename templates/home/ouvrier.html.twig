{% extends 'base.html.twig' %}

{% block title %}Tableau de bord Ouvrier{% endblock %}

{% block body %}
<div class="page-header">
    <h3 class="page-title text-white">
        <span class="page-title-icon bg-gradient-primary text-white me-2">
            <i class="mdi mdi-account-hard-hat"></i>
        </span> Tableau de bord Ouvrier
    </h3>
    <div class="d-flex align-items-center">
        <p class="text-muted mb-0">Dernière mise à jour: {{ "now"|date("d/m/Y H:i", 'Africa/Tunis') }}</p>
    </div>
</div>

<div class="row">
    <div class="col-md-4 stretch-card grid-margin">
        <div class="card bg-gradient-info card-img-holder text-white">
            <div class="card-body">
                <img src="{{ asset('UI/assets/images/dashboard/circle.svg') }}" class="card-img-absolute" alt="circle-image">
                <h4 class="font-weight-normal mb-3">Mes heures <i class="mdi mdi-clock mdi-24px float-right"></i>
                </h4>
                <h2 class="mb-5">42h</h2>
                <h6 class="card-text">
                    <a href="#" class="text-white">Voir mon pointage</a>
                </h6>
            </div>
        </div>
    </div>
    <div class="col-md-4 stretch-card grid-margin">
        <div class="card bg-gradient-success card-img-holder text-white">
            <div class="card-body">
                <img src="{{ asset('UI/assets/images/dashboard/circle.svg') }}" class="card-img-absolute" alt="circle-image">
                <h4 class="font-weight-normal mb-3">Mes demandes <i class="mdi mdi-file-document mdi-24px float-right"></i>
                </h4>
                <h2 class="mb-5">2</h2>
                <h6 class="card-text">
                    <a href="#" class="text-white">Voir mes demandes</a>
                </h6>
            </div>
        </div>
    </div>
    <div class="col-md-4 stretch-card grid-margin">
        <div class="card bg-gradient-danger card-img-holder text-white">
            <div class="card-body">
                <img src="{{ asset('UI/assets/images/dashboard/circle.svg') }}" class="card-img-absolute" alt="circle-image">
                <h4 class="font-weight-normal mb-3">À faire aujourd'hui <i class="mdi mdi-calendar-check mdi-24px float-right"></i>
                </h4>
                <h2 class="mb-5">3 tâches</h2>
                <h6 class="card-text">
                    <a href="#" class="text-white">Voir ma liste</a>
                </h6>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-7 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Actions rapides</h4>
                <div class="row mt-4">
                    <div class="col-md-6 mb-3">
                        <div class="d-flex align-items-center pb-2">
                            <div class="dot-indicator bg-success mr-2"></div>
                            <p class="mb-0 text-success font-weight-medium">Pointage</p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <button class="btn btn-gradient-success btn-sm" onclick="location.href='{{ path('app_pointageEntree') }}'">
                                <i class="mdi mdi-login-variant"></i> Entrée
                            </button>
                            <button class="btn btn-gradient-danger btn-sm" onclick="location.href='{{ path('app_pointageSortie') }}'">
                                <i class="mdi mdi-logout-variant"></i> Sortie
                            </button>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="d-flex align-items-center pb-2">
                            <div class="dot-indicator bg-primary mr-2"></div>
                            <p class="mb-0 text-primary font-weight-medium">Demandes</p>
                        </div>
                        <button class="btn btn-gradient-primary btn-sm" onclick="location.href='{{ path('app_demande_new') }}'">
                            <i class="mdi mdi-file-plus"></i> Nouvelle demande
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-5 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Mon profil</h4>
                <div class="d-flex flex-row">
                    <div class="img-lg rounded-circle bg-gradient-primary d-flex align-items-center justify-content-center text-white">
                        <i class="mdi mdi-account icon-lg"></i>
                    </div>
                    <div class="ml-3 mt-2">
                        <h5>{{ app.user.username }}</h5>
                        <p class="text-muted">Ouvrier</p>
                        <p class="mt-2 text-success">
                            <i class="mdi mdi-check-circle"></i> Actif
                        </p>
                    </div>
                </div>
                <a href="#" class="btn btn-inverse-primary btn-sm mt-3 w-100">
                    <i class="mdi mdi-account-edit"></i> Modifier mon profil
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Mes derniers pointages</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Heure d'entrée</th>
                                <th>Heure de sortie</th>
                                <th>Total heures</th>
                                <th>État</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>{{ "now"|date("d/m/Y") }}</td>
                                <td>08:15</td>
                                <td>--:--</td>
                                <td>En cours</td>
                                <td><label class="badge badge-gradient-success">Actif</label></td>
                            </tr>
                            <tr>
                                <td>{{ "now"|date_modify("-1 day")|date("d/m/Y") }}</td>
                                <td>08:00</td>
                                <td>17:30</td>
                                <td>9h30</td>
                                <td><label class="badge badge-gradient-info">Validé</label></td>
                            </tr>
                            <tr>
                                <td>{{ "now"|date_modify("-2 day")|date("d/m/Y") }}</td>
                                <td>08:30</td>
                                <td>17:45</td>
                                <td>9h15</td>
                                <td><label class="badge badge-gradient-info">Validé</label></td>
                            </tr>
                            <tr>
                                <td>{{ "now"|date_modify("-3 day")|date("d/m/Y") }}</td>
                                <td>08:05</td>
                                <td>17:00</td>
                                <td>8h55</td>
                                <td><label class="badge badge-gradient-info">Validé</label></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

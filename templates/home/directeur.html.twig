{% extends 'base.html.twig' %}

{% block title %}Tableau de bord Directeur{% endblock %}

{% block body %}
<div class="page-header">
    <h3 class="page-title text-white">
        <span class="page-title-icon bg-gradient-primary text-white me-2">
            <i class="mdi mdi-view-dashboard"></i>
        </span> Tableau de bord Directeur
    </h3>
    <div class="d-flex align-items-center">
        <p class="text-muted mb-0">Dernière mise à jour: {{ "now"|date("d/m/Y H:i", 'Africa/Tunis') }}</p>
    </div>
</div>

<div class="row">
    <div class="col-md-4 stretch-card grid-margin">
        <div class="card bg-gradient-danger card-img-holder text-white">
            <div class="card-body">
                <img src="{{ asset('UI/assets/images/dashboard/circle.svg') }}" class="card-img-absolute" alt="circle-image">
                <h4 class="font-weight-normal mb-3">Demandes en attente <i class="mdi mdi-file-document-box mdi-24px float-right"></i>
                </h4>
<h2 class="mb-5">{{ nbDemandesEnAttente }}</h2>
                <h6 class="card-text">
                    <a href="{{ path('app_demandeadmin_liste_attente') }}" class="text-white">Voir toutes les demandes</a>
                </h6>
            </div>
        </div>
    </div>
    <div class="col-md-4 stretch-card grid-margin">
        <div class="card bg-gradient-info card-img-holder text-white">
            <div class="card-body">
                <img src="{{ asset('UI/assets/images/dashboard/circle.svg') }}" class="card-img-absolute" alt="circle-image">
                <h4 class="font-weight-normal mb-3">Employés actifs <i class="mdi mdi-account-multiple mdi-24px float-right"></i>
                </h4>
                <h2 class="mb-5">45</h2>
                <h6 class="card-text">
                    <a href="{{ path('app_employe_index') }}" class="text-white">Gérer les employés</a>
                </h6>
            </div>
        </div>
    </div>
    <div class="col-md-4 stretch-card grid-margin">
        <div class="card bg-gradient-success card-img-holder text-white">
            <div class="card-body">
                <img src="{{ asset('UI/assets/images/dashboard/circle.svg') }}" class="card-img-absolute" alt="circle-image">
                <h4 class="font-weight-normal mb-3">Chiffre d'affaires <i class="mdi mdi-cash-multiple mdi-24px float-right"></i>
                </h4>
                <h2 class="mb-5">95,500 TND</h2>
                <h6 class="card-text">
                    <a href="{{ path('app_facture_index') }}" class="text-white">Voir les factures</a>
                </h6>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-7 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex flex-row justify-content-between">
                    <h4 class="card-title mb-1">Activités récentes</h4>
                    <p class="text-muted mb-1">Statut</p>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="preview-list">
                            <div class="preview-item border-bottom">
                                <div class="preview-thumbnail">
                                    <div class="preview-icon bg-primary">
                                        <i class="mdi mdi-file-document"></i>
                                    </div>
                                </div>
                                <div class="preview-item-content d-sm-flex flex-grow">
                                    <div class="flex-grow">
                                        <h6 class="preview-subject">Nouvelle demande de congé</h6>
                                        <p class="text-muted mb-0">Ahmed Trabelsi - Service Technique</p>
                                    </div>
                                    <div class="me-auto text-sm-right pt-2 pt-sm-0">
                                        <p class="text-danger">En attente</p>
                                        <p class="text-muted mb-0">Il y a 30 minutes</p>
                                    </div>
                                </div>
                            </div>
                            <div class="preview-item border-bottom">
                                <div class="preview-thumbnail">
                                    <div class="preview-icon bg-success">
                                        <i class="mdi mdi-cash"></i>
                                    </div>
                                </div>
                                <div class="preview-item-content d-sm-flex flex-grow">
                                    <div class="flex-grow">
                                        <h6 class="preview-subject">Facture #458 payée</h6>
                                        <p class="text-muted mb-0">Client: Entreprise ABC</p>
                                    </div>
                                    <div class="me-auto text-sm-right pt-2 pt-sm-0">
                                        <p class="text-success">Complété</p>
                                        <p class="text-muted mb-0">Aujourd'hui, 09:30</p>
                                    </div>
                                </div>
                            </div>
                            <div class="preview-item border-bottom">
                                <div class="preview-thumbnail">
                                    <div class="preview-icon bg-info">
                                        <i class="mdi mdi-account-check"></i>
                                    </div>
                                </div>
                                <div class="preview-item-content d-sm-flex flex-grow">
                                    <div class="flex-grow">
                                        <h6 class="preview-subject">Nouvel employé enregistré</h6>
                                        <p class="text-muted mb-0">Samia Khadhraoui - Service Marketing</p>
                                    </div>
                                    <div class="me-auto text-sm-right pt-2 pt-sm-0">
                                        <p class="text-info">Traité</p>
                                        <p class="text-muted mb-0">Hier, 14:45</p>
                                    </div>
                                </div>
                            </div>
                            <div class="preview-item border-bottom">
                                <div class="preview-thumbnail">
                                    <div class="preview-icon bg-warning">
                                        <i class="mdi mdi-package-variant"></i>
                                    </div>
                                </div>
                                <div class="preview-item-content d-sm-flex flex-grow">
                                    <div class="flex-grow">
                                        <h6 class="preview-subject">Nouvel article ajouté</h6>
                                        <p class="text-muted mb-0">Moniteur HP 24 pouces - Stock: 15</p>
                                    </div>
                                    <div class="me-auto text-sm-right pt-2 pt-sm-0">
                                        <p class="text-warning">En cours</p>
                                        <p class="text-muted mb-0">18 Avr, 16:30</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-5 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Aperçu départements</h4>
                <canvas id="department-chart" style="height:250px"></canvas>
                <div class="bg-gray-dark d-flex d-md-block d-xl-flex flex-row py-3 px-4 px-md-3 px-xl-4 rounded mt-3">
                    <div class="text-md-center text-xl-left">
                        <h6 class="mb-1">Département le plus performant</h6>
                        <p class="text-muted mb-0">Service Technique</p>
                    </div>
                    <div class="align-self-center flex-grow text-right text-md-center text-xl-right py-md-2 py-xl-0">
                        <h6 class="font-weight-bold mb-0">+18.33%</h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Accès rapide</h4>
                <div class="row mt-3">
                    <div class="col-md-3 mb-4 stretch-card grid-margin">
                        <div class="card card-tale">
                            <div class="card-body">
                                <p class="mb-4">Gestion des départements</p>
                                <p class="fs-30 mb-2">{{ 5 }}</p>
                                <p>départements actifs</p>
                                <a href="{{ path('app_departement_index') }}" class="btn btn-outline-light btn-sm mt-3">Gérer</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-4 stretch-card grid-margin">
                        <div class="card card-dark-blue">
                            <div class="card-body">
                                <p class="mb-4">Gestion des entreprises</p>
                                <p class="fs-30 mb-2">{{ 8 }}</p>
                                <p>entreprises partenaires</p>
                                <a href="{{ path('app_entreprise_index') }}" class="btn btn-outline-light btn-sm mt-3">Gérer</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-4 stretch-card grid-margin">
                        <div class="card card-light-blue">
                            <div class="card-body">
                                <p class="mb-4">Gestion des candidats</p>
                                <p class="fs-30 mb-2">{{ 12 }}</p>
                                <p>candidatures en attente</p>
                                <a href="{{ path('app_candidat_index') }}" class="btn btn-outline-light btn-sm mt-3">Gérer</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-4 stretch-card grid-margin">
                        <div class="card card-light-danger">
                            <div class="card-body">
                                <p class="mb-4">Feedbacks clients</p>
                                <p class="fs-30 mb-2">{{ 7 }}</p>
                                <p>nouveaux feedbacks</p>
                                <a href="{{ path('app_clfr_feedback') }}" class="btn btn-outline-light btn-sm mt-3">Consulter</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    if (document.getElementById('department-chart')) {
        var ctx = document.getElementById('department-chart').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['Technique', 'Marketing', 'Ressources Humaines', 'Finance', 'Administration'],
                datasets: [{
                    data: [30, 22, 17, 15, 16],
                    backgroundColor: [
                        'rgba(75, 192, 192, 0.8)',
                        'rgba(54, 162, 235, 0.8)',
                        'rgba(255, 206, 86, 0.8)',
                        'rgba(255, 99, 132, 0.8)',
                        'rgba(153, 102, 255, 0.8)'
                    ],
                    borderColor: [
                        'rgba(75, 192, 192, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(255, 99, 132, 1)',
                        'rgba(153, 102, 255, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                legend: {
                    position: 'bottom',
                },
                title: {
                    display: true,
                    text: 'Répartition des employés par département'
                },
                animation: {
                    animateScale: true,
                    animateRotate: true
                }
            }
        });
    }
});
</script>
{% endblock %}
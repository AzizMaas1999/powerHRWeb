<form method="post"
      action="{{ path('app_candidat_delete', {'id': candidat.id}) }}"
      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce candidat ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ candidat.id) }}">
    <button type="submit" class="btn btn-danger px-4">Supprimer</button>
</form>

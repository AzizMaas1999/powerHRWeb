<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Postuler - PowerHR</title>
    <link rel="stylesheet" href="{{ asset('UI/assets/vendors/mdi/css/materialdesignicons.min.css') }}">
    <link rel="stylesheet" href="{{ asset('UI/assets/vendors/css/vendor.bundle.base.css') }}">
    <link rel="stylesheet" href="{{ asset('UI/assets/css/style.css') }}">
    <link rel="shortcut icon" href="{{ asset('UI/assets/images/favicon.png') }}" />
    <style>
        body {
            background: #191c24;
            font-family: "Roboto", "Helvetica", "Arial", sans-serif;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .auth-form {
            width: 100%;
            max-width: 400px;
            padding: 30px;
            background: #191c24;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.3);
            border: 1px solid #2A3038;
        }
        .auth-form h1 {
            text-align: center;
            color: #ffffff;
            margin-bottom: 30px;
            font-size: 24px;
            font-weight: 500;
        }
        .form-group {
            margin-bottom: 20px;
        }
        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: #6c7293;
            font-size: 14px;
        }
        .form-control {
            width: 100%;
            padding: 12px 15px;
            background: #2A3038;
            border: 1px solid #2c2e33;
            border-radius: 5px;
            font-size: 14px;
            color: #ffffff;
            transition: border-color 0.3s;
        }
        .form-control:focus {
            border-color: #0090e7;
            outline: none;
        }
        .btn-primary {
            background: #0090e7;
            color: white;
            padding: 12px 20px;
            border: none;
            border-radius: 5px;
            width: 100%;
            font-size: 14px;
            font-weight: 500;
            cursor: pointer;
            transition: background 0.3s;
        }
        .btn-primary:hover {
            background: #0078c1;
        }
        .alert {
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 5px;
            font-size: 14px;
        }
        .alert-success {
            background: rgba(40, 167, 69, 0.1);
            color: #28a745;
            border: 1px solid rgba(40, 167, 69, 0.2);
        }
        .alert-danger {
            background: rgba(220, 53, 69, 0.1);
            color: #dc3545;
            border: 1px solid rgba(220, 53, 69, 0.2);
        }
        .form-control::placeholder {
            color: #6c7293;
        }
        .form-control:-webkit-autofill,
        .form-control:-webkit-autofill:hover,
        .form-control:-webkit-autofill:focus {
            -webkit-text-fill-color: #ffffff;
            -webkit-box-shadow: 0 0 0px 1000px #2A3038 inset;
            transition: background-color 5000s ease-in-out 0s;
        }
        .file-input-wrapper {
            position: relative;
        }
        .file-input-wrapper input[type="file"] {
            padding: 10px 0;
        }
        .file-input-wrapper::after {
            content: "Choisir un fichier";
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #6c7293;
            pointer-events: none;
        }
    </style>
</head>
<body>
    <div class="auth-form">
        <h1>Postuler chez PowerHR</h1>
        
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}

        {{ form_start(form, {'attr': {'class': 'form'}}) }}
            <div class="form-group">
                {{ form_label(form.nom, 'Nom') }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre nom'}}) }}
                {{ form_errors(form.nom) }}
            </div>

            <div class="form-group">
                {{ form_label(form.prenom, 'Prénom') }}
                {{ form_widget(form.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre prénom'}}) }}
                {{ form_errors(form.prenom) }}
            </div>

            <div class="form-group">
                {{ form_label(form.email, 'Email') }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre email'}}) }}
                {{ form_errors(form.email) }}
            </div>

            <div class="form-group">
                {{ form_label(form.telephone, 'Téléphone') }}
                {{ form_widget(form.telephone, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre numéro de téléphone'}}) }}
                {{ form_errors(form.telephone) }}
            </div>

            <div class="form-group">
                {{ form_label(form.entreprise, 'Entreprise') }}
                {{ form_widget(form.entreprise, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le nom de l\'entreprise'}}) }}
                {{ form_errors(form.entreprise) }}
            </div>

            <div class="form-group">
                {{ form_label(form.cvFile, 'CV (PDF)') }}
                <div class="file-input-wrapper">
                    {{ form_widget(form.cvFile, {'attr': {'class': 'form-control'}}) }}
                </div>
                {{ form_errors(form.cvFile) }}
            </div>

            <button type="submit" class="btn btn-primary">Envoyer ma candidature</button>
        {{ form_end(form) }}
    </div>
</body>
</html>

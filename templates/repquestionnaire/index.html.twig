{% extends 'base.html.twig' %}

{% block title %}Repquestionnaire index{% endblock %}

{% block body %}
    <h1>Repquestionnaire index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DateCreation</th>
                <th>Reponse</th>
                <th>Questionnaire_id</th>
                <th>Employe_id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for repquestionnaire in repquestionnaires %}
            <tr>
                <td>{{ repquestionnaire.id }}</td>
                <td>{{ repquestionnaire.dateCreation ? repquestionnaire.dateCreation|date('Y-m-d') : '' }}</td>
                <td>{{ repquestionnaire.reponse }}</td>
                <td>{{ repquestionnaire.questionnaireId }}</td>
                <td>{{ repquestionnaire.employeId }}</td>
                <td>
                    <a href="{{ path('app_repquestionnaire_show', {'id': repquestionnaire.id}) }}">show</a>
                    <a href="{{ path('app_repquestionnaire_edit', {'id': repquestionnaire.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_repquestionnaire_new') }}">Create new</a>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Nouvelle Facture{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6 fw-semibold text-light">
            üßæ Cr√©er une <span class="text-primary">Nouvelle Facture</span>
        </h1>
        <a href="{{ path('app_facture_index') }}" class="btn btn-outline-primary rounded-pill px-4">
            ‚Üê Retour √† la liste
        </a>
    </div>

    <div class="card bg-dark border border-primary shadow-lg rounded-4">
        <div class="card-body p-4">
            {{ form_start(form) }}

            <div class="row mb-4">
                <div class="col-md-6 mb-3">
                    <label class="form-label text-light fw-bold">üìÖ Date</label>
                    {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.date) }}
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label text-light fw-bold">üßæ Type</label>
                    {{ form_widget(form.typeFact, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.typeFact) }}
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label text-light fw-bold">üî¢ Num√©ro</label>
                    {{ form_widget(form.num, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.num) }}
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label text-light fw-bold">üí∂ Total</label>
                    {{ form_widget(form.total, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.total) }}
                </div>
            </div>

            <h4 class="text-light mb-3">üì¶ Articles Disponibles</h4>
            <div class="table-responsive rounded-3 overflow-hidden">
                <table class="table table-dark table-striped border border-secondary">
                    <thead class="table-primary text-dark">
                        <tr>
                            <th style="width: 50px;">‚úî</th>
                            <th>Nom de l'article</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for choice in form.articles %}
                            <tr>
                                <td>{{ form_widget(choice) }}</td>
                                <td>{{ form_label(choice, null, {'label_attr': {'class': 'text-white'}}) }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="text-end mt-4">
                <button class="btn btn-primary rounded-pill px-4 py-2 fw-bold">
                    üíæ Enregistrer la facture
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
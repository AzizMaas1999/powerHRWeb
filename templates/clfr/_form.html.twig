{{ form_start(form) }}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">  {# Formulaire centr√© avec une largeur plus petite #}

            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">
                        <i class="ni ni-user-run"></i> Create New Clfr
                    </h4>
                </div>
                <div class="card-body">
                    {% for field in form %}
                        <div class="mb-3">
                            {{ form_label(field, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(field) }}
                        </div>
                    {% endfor %}

                    <button type="submit" class="btn btn-primary w-100">
                        <i class="ni ni-save"></i> Save
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
{{ form_end(form) }}

{% extends 'base.html.twig' %}

{% block title %}Espace directeur{% endblock %}

{% block body %}
    <div style="max-width: 600px; margin: 50px auto; text-align: center;">
        <h1>Bienvenue dans l'espace directeur 👩‍💼👨‍💼</h1>

        <div style="margin-top: 30px; display: flex; flex-direction: column; gap: 15px;">
            <a href="{{ path('app_employe_index') }}" class="btn btn-primary">📋 Gérer les employés</a>
            <a href="{{ path('app_demande_index') }}" class="btn btn-success">💰 Gérer les demandes</a>
            <a href="{{ path('app_questionnaire_index') }}" class="btn btn-info">📝 Gérer les Questionnaires</a>
        </div>
    </div>

    <style>
        .btn {
            padding: 12px 20px;
            text-decoration: none;
            color: white;
            border-radius: 6px;
            font-size: 16px;
            transition: background-color 0.3s;
        }

        .btn-primary { background-color: #007bff; }
        .btn-success { background-color: #28a745; }
        .btn-info { background-color: #17a2b8; }
        .btn-secondary { background-color: #6c757d; }

        .btn:hover {
            filter: brightness(90%);
        }
    </style>
{% endblock %}

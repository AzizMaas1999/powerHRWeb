<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <!-- Fonts and icons -->
        <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
        <link href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">

        <!-- CSS Files -->
        <link href="{{ asset('UI/css/bootstrap.min.css') }}" rel="stylesheet" />
        <link href="{{ asset('UI/css/paper-kit.css') }}" rel="stylesheet" />
        <link href="{{ asset('UI/css/nucleo-icons.css') }}" rel="stylesheet">
        <link href="{{ asset('UI/css/nucleo-icons.css') }}" rel="stylesheet" />


        {% block stylesheets %}{% endblock %}

        {% block javascripts %}
        <!-- Core JS Files -->
        <script src="{{ asset('UI/js/core/jquery.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('UI/js/core/popper.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('UI/js/core/bootstrap.min.js') }}" type="text/javascript"></script>

        <!-- Plugins -->
        <script src="{{ asset('UI/js/plugins/bootstrap-switch.js') }}"></script>
        <script src="{{ asset('UI/js/plugins/nouislider.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('UI/js/plugins/moment.min.js') }}"></script>
        <script src="{{ asset('UI/js/plugins/bootstrap-datepicker.js') }}" type="text/javascript"></script>

        <!-- Control Center for Paper Kit -->
        <script src="{{ asset('UI/js/paper-kit.js?v=2.2.0') }}" type="text/javascript"></script>

        <script>
            $(document).ready(function() {
                if ($("#datetimepicker").length != 0) {
                    $('#datetimepicker').datetimepicker({
                        icons: {
                            time: "fa fa-clock-o",
                            date: "fa fa-calendar",
                            up: "fa fa-chevron-up",
                            down: "fa fa-chevron-down",
                            previous: 'fa fa-chevron-left',
                            next: 'fa fa-chevron-right',
                            today: 'fa fa-screenshot',
                            clear: 'fa fa-trash',
                            close: 'fa fa-remove'
                        }
                    });
                }
            });
        </script>
        {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
        
    </head>
    <body>
        <!-- Navbar -->
        <style>
    .table td {
        color: white !important;
    }
</style>

        <nav class="navbar navbar-expand-lg fixed-top navbar-transparent" color-on-scroll="300">
            <div class="container">
                <img src="{{ asset('UI/img/Logo1.png') }}" alt="" style="height: 300px; width: auto;">
                <div class="navbar-translate">
                    <button class="navbar-toggler navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-bar bar1"></span>
                        <span class="navbar-toggler-bar bar2"></span>
                        <span class="navbar-toggler-bar bar3"></span>
                    </button>
                </div>
                <div class="collapse navbar-collapse justify-content-end" id="navigation">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a href="https://demos.creative-tim.com/paper-kit-2/docs/1.0/getting-started/introduction.html" target="_blank" class="nav-link"><i class="nc-icon nc-badge"></i> Documentation</a>
                        </li>
                        <li class="nav-item">
                            <a href="https://www.creative-tim.com/product/paper-kit-2-pro?ref=pk2-free-local" target="_blank" class="btn btn-danger btn-round">LogIn</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- End Navbar -->

        <div class="page-header section-dark" style="background-image: url('{{ asset('UI/img/homeBackground.jpeg') }}')">
            <div class="filter"></div>
            <div class="content-center">
                <div class="container">
                    <div class="title-brand">
                        <h1 class="presentation-title">PowerHR</h1>
                    </div>
                    <h2 class="presentation-subtitle text-center">La première solution Ressources Humaines à considérer !</h2>
                    <div class="fog-low" style="opacity: 0.2">
                        <img src="{{ asset('UI/img/fog-low.png') }}" alt="">
                    </div>
                </div>
            </div>
            <div class="moving-clouds" style="background-image: url('{{ asset('UI/img/clouds.png') }}');"></div>
        </div>

        {% block body %}{% endblock %}

        <footer class="footer footer-black footer-white">
            <div class="container">
                <div class="row">
                    <nav class="footer-nav">
                        <ul>
                            <li>
                                <a href="https://www.creative-tim.com" target="_blank">Creative Tim</a>
                            </li>
                        </ul>
                    </nav>
                    <div class="credits ml-auto">
                        <span class="copyright">
                           
                        </span>
                    </div>
                </div>
            </div>
        </footer>
    </body>
</html>

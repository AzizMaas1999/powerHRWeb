<form method="post"
      action="{{ path('app_employe_delete', {'id': employe.id}) }}"
      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce employe ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ employe.id) }}">
    <button type="submit" class="btn btn-danger px-4">Supprimer</button>
</form>

{% extends 'base.html.twig' %}

{% block title %}Demande index{% endblock %}

{% block body %}
    <h1>Demande index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DateCreation</th>
                <th>Type</th>
                <th>DateDebut</th>
                <th>DateFin</th>
                <th>Salaire</th>
                <th>Cause</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for demande in demandes %}
            <tr>
                <td>{{ demande.id }}</td>
                <td>{{ demande.dateCreation ? demande.dateCreation|date('Y-m-d') : '' }}</td>
                <td>{{ demande.type }}</td>
                <td>{{ demande.dateDebut ? demande.dateDebut|date('Y-m-d') : '' }}</td>
                <td>{{ demande.dateFin ? demande.dateFin|date('Y-m-d') : '' }}</td>
                <td>{{ demande.salaire }}</td>
                <td>{{ demande.cause }}</td>
                <td>{{ demande.status }}</td>
                <td>
                    <a href="{{ path('app_demande_show', {'id': demande.id}) }}">show</a>
                    <a href="{{ path('app_demande_edit', {'id': demande.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_demande_new') }}">Create new</a>
{% endblock %}

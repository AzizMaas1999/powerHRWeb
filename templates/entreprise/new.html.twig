{% extends 'base.html.twig' %}

{% block title %}Nouvelle Entreprise{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .form-container {
            background: rgba(255, 255, 255, 0.02);
            border-radius: 10px;
            padding: 25px;
            margin-top: 20px;
            box-shadow: 0 4px 24px rgba(0, 0, 0, 0.1);
        }
        .form-title {
            color: rgba(255, 255, 255, 0.9);
            font-size: 1.5rem;
            margin-bottom: 25px;
            padding-bottom: 15px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }
        .form-group {
            margin-bottom: 20px;
        }
        .form-label {
            color: rgba(255, 255, 255, 0.8);
            margin-bottom: 8px;
            font-weight: 500;
        }
        .form-control {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            color: rgba(255, 255, 255, 0.9);
            border-radius: 6px;
            padding: 10px 15px;
        }
        .form-control:focus {
            background: rgba(255, 255, 255, 0.08);
            border-color: rgba(255, 255, 255, 0.2);
            box-shadow: 0 0 0 2px rgba(255, 255, 255, 0.05);
            color: rgba(255, 255, 255, 0.9);
        }
        .form-check-input {
            background-color: rgba(255, 255, 255, 0.05);
            border-color: rgba(255, 255, 255, 0.2);
        }
        .form-check-input:checked {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }
        .form-check-label {
            color: rgba(255, 255, 255, 0.8);
        }
        .actions-container {
            margin-top: 25px;
            padding-top: 20px;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            display: flex;
            gap: 10px;
            justify-content: flex-end;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="form-container">
            <h1 class="form-title">Nouvelle Entreprise</h1>

            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.nom, {
                            'attr': {
                                'class': 'form-control',
                                'maxlength': 15,
                                'pattern': '.{3,15}',
                                'title': 'Le nom doit contenir entre 3 et 15 caractères'
                            }
                        }) }}
                        <small class="text-muted" style="color: rgba(255, 255, 255, 0.6);">Maximum 15 caractères</small>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_label(form.secteur, 'Secteur', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.secteur, {
                            'attr': {
                                'class': 'form-control',
                                'maxlength': 10,
                                'pattern': '.{3,10}',
                                'title': 'Le secteur doit contenir entre 3 et 10 caractères'
                            }
                        }) }}
                        <small class="text-muted" style="color: rgba(255, 255, 255, 0.6);">Maximum 10 caractères</small>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_label(form.matricule_fiscale, 'Matricule Fiscale', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.matricule_fiscale, {
                            'attr': {
                                'class': 'form-control',
                                'maxlength': 20,
                                'pattern': '.{5,20}',
                                'title': 'Le matricule fiscale doit contenir entre 5 et 20 caractères'
                            }
                        }) }}
                        <small class="text-muted" style="color: rgba(255, 255, 255, 0.6);">Maximum 20 caractères</small>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_label(form.phone_number, 'Téléphone', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.phone_number, {
                            'attr': {
                                'class': 'form-control',
                                'pattern': '[0-9]{8}',
                                'maxlength': 8,
                                'title': 'Le numéro de téléphone doit contenir exactement 8 chiffres',
                                'oninput': 'this.value = this.value.replace(/[^0-9]/g, "").slice(0, 8)'
                            }
                        }) }}
                        <small class="text-muted" style="color: rgba(255, 255, 255, 0.6);">Exactement 8 chiffres</small>
                    </div>
                </div>
            </div>

            <div class="form-group">
                {{ form_widget(form.phone_verified, {'attr': {'class': 'form-check-input'}}) }}
                {{ form_label(form.phone_verified, 'Téléphone vérifié', {'label_attr': {'class': 'form-check-label'}}) }}
            </div>

            <div class="actions-container">
                <a href="{{ path('app_entreprise_index') }}" class="btn btn-sm btn-outline-secondary btn-action me-1">
                    <i class="bi bi-arrow-left"></i> Retour
                </a>
                <button type="submit" class="btn btn-sm btn-outline-success btn-action">
                    <i class="bi bi-check-lg"></i> Créer
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

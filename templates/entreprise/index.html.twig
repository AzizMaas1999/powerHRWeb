{% extends 'base.html.twig' %}

{% block title %}Liste des entreprises{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css">
    <style>
        .search-container {
            background: rgba(255, 255, 255, 0.02);
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
        }
        .search-wrapper {
            position: relative;
            margin-bottom: 15px;
        }
        .search-input {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            color: rgba(255, 255, 255, 0.9);
            border-radius: 6px;
            padding: 10px 15px 10px 40px;
            width: 100%;
            transition: all 0.3s ease;
        }
        .search-input:focus {
            border-color: rgba(255, 255, 255, 0.2);
            background: rgba(255, 255, 255, 0.08);
            box-shadow: 0 0 0 2px rgba(255, 255, 255, 0.05);
        }
        .search-input::placeholder {
            color: rgba(255, 255, 255, 0.4);
        }
        .search-icon {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: rgba(255, 255, 255, 0.4);
            pointer-events: none;
            font-size: 16px;
            z-index: 2;
        }
        .btn-add {
            padding: 6px 12px;
            font-size: 0.875rem;
            display: inline-flex;
            align-items: center;
            gap: 6px;
            float: right;
        }
        .btn-add i {
            font-size: 16px;
        }
        .table-container {
            background: rgba(255, 255, 255, 0.02);
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 24px rgba(0, 0, 0, 0.1);
        }
        .table {
            margin-bottom: 0;
        }
        .table thead th {
            background: rgba(255, 255, 255, 0.03);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            color: rgba(255, 255, 255, 0.7);
            font-weight: 500;
            padding: 15px;
            font-size: 0.95rem;
        }
        /* Remove sorting arrows */
        .table thead th::before,
        .table thead th::after {
            display: none !important;
        }
        .table tbody td {
            border-color: rgba(255, 255, 255, 0.03);
            padding: 15px;
            vertical-align: middle;
            color: rgba(255, 255, 255, 0.8);
        }
        .table tbody tr:hover {
            background: rgba(255, 255, 255, 0.03);
        }
        .badge {
            padding: 6px 10px;
            font-weight: 500;
        }
        .badge.bg-success {
            background-color: rgba(25, 135, 84, 0.2) !important;
            color: #28a745;
        }
        .badge.bg-secondary {
            background-color: rgba(173, 181, 189, 0.2) !important;
            color: #adb5bd;
        }
        .pagination {
            margin: 20px 0 0 0;
            gap: 8px;
        }
        .page-link {
            background: rgba(255, 255, 255, 0.03);
            border: none;
            color: rgba(255, 255, 255, 0.6);
            border-radius: 6px;
            padding: 8px 12px;
            transition: all 0.2s ease;
            font-size: 1.1rem;
        }
        .page-link:hover {
            background: rgba(255, 255, 255, 0.08);
            color: rgba(255, 255, 255, 0.9);
        }
        .page-item.active .page-link {
            display: none;
        }
        .page-item.disabled .page-link {
            background: transparent;
            color: rgba(255, 255, 255, 0.3);
        }
        .btn-action {
            border-radius: 6px;
            padding: 6px 12px;
            transition: all 0.2s ease;
            border-width: 1px;
        }
        .btn-action:hover {
            transform: translateY(-1px);
            background: rgba(255, 255, 255, 0.05);
        }
        .btn-action i {
            font-size: 14px;
        }
        .btn-view {
            background: rgba(13, 110, 253, 0.1);
            color: #0d6efd;
            border-color: rgba(13, 110, 253, 0.1);
        }
        .btn-view:hover {
            background: rgba(13, 110, 253, 0.2);
            color: #0d6efd;
        }
        .btn-edit {
            background: rgba(255, 193, 7, 0.1);
            color: #ffc107;
            border-color: rgba(255, 193, 7, 0.1);
        }
        .btn-edit:hover {
            background: rgba(255, 193, 7, 0.2);
            color: #ffc107;
        }
        .btn-delete {
            background: rgba(220, 53, 69, 0.1);
            color: #dc3545;
            border-color: rgba(220, 53, 69, 0.1);
        }
        .btn-delete:hover {
            background: rgba(220, 53, 69, 0.2);
            color: #dc3545;
        }
        .btn-info {
            background: rgba(13, 202, 240, 0.1);
            color: #0dcaf0;
            border-color: rgba(13, 202, 240, 0.1);
        }
        .btn-info:hover {
            background: rgba(13, 202, 240, 0.2);
            color: #0dcaf0;
        }
        .modal-content {
            background: #191c24;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }
        .modal-header {
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }
        .modal-footer {
            border-top: 1px solid rgba(255, 255, 255, 0.1);
        }
        .modal-title {
            color: rgba(255, 255, 255, 0.9);
        }
        .modal-body {
            color: rgba(255, 255, 255, 0.7);
        }
        .btn-confirm-delete {
            background: #dc3545;
            color: white;
            border: none;
        }
        .btn-confirm-delete:hover {
            background: #bb2d3b;
        }
        .btn-cancel {
            background: rgba(255, 255, 255, 0.1);
            color: rgba(255, 255, 255, 0.7);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }
        .btn-cancel:hover {
            background: rgba(255, 255, 255, 0.15);
            color: rgba(255, 255, 255, 0.9);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="text-white">Entreprises</h1>
        </div>

        <div class="search-container">
            <div class="search-wrapper">
                <i class="bi bi-search search-icon"></i>
                <input type="text" id="tableSearch" class="form-control search-input" placeholder="Rechercher une entreprise...">
            </div>
            <a href="{{ path('app_entreprise_new') }}" class="btn btn-success btn-action btn-add">
                <i class="bi bi-plus-circle"></i> + Ajouter entreprise
            </a>
        </div>

        <div class="table-container">
            <div class="table-responsive">
                <table id="entreprisesTable" class="table table-hover">
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Secteur</th>
                            <th>Matricule Fiscale</th>
                            <th>Téléphone</th>
                            <th>Vérifié</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for entreprise in pagination %}
                        <tr>
                            <td>{{ entreprise.nom }}</td>
                            <td>{{ entreprise.secteur }}</td>
                            <td>{{ entreprise.matriculeFiscale }}</td>
                            <td>{{ entreprise.phoneNumber }}</td>
                            <td>
                                {% if entreprise.phoneVerified %}
                                    <span class="badge bg-success">Oui</span>
                                {% else %}
                                    <span class="badge bg-secondary">Non</span>
                                {% endif %}
                            </td>
                            <td class="text-center">
                                <a href="{{ path('app_entreprise_show', {'id': entreprise.id}) }}" class="btn btn-sm btn-view btn-action me-1">
                                    <i class="bi bi-eye"></i> Voir
                                </a>
                                <a href="{{ path('app_entreprise_edit', {'id': entreprise.id}) }}" class="btn btn-sm btn-edit btn-action me-1">
                                    <i class="bi bi-pencil"></i> Modifier
                                </a>
                                <a href="{{ path('app_entreprise_pdf', {'id': entreprise.id}) }}" 
                                   class="btn btn-sm btn-info btn-action me-1" 
                                   onclick="window.open(this.href, '_blank', 'noopener,noreferrer'); return false;">
                                    <i class="bi bi-file-pdf"></i> PDF
                                </a>
                                <button type="button" class="btn btn-sm btn-delete btn-action" data-bs-toggle="modal" data-bs-target="#deleteModal{{ entreprise.id }}">
                                    <i class="bi bi-trash"></i> Supprimer
                                </button>

                                <!-- Delete Modal -->
                                <div class="modal fade" id="deleteModal{{ entreprise.id }}" tabindex="-1" aria-labelledby="deleteModalLabel{{ entreprise.id }}" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="deleteModalLabel{{ entreprise.id }}">Confirmation de suppression</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                Êtes-vous sûr de vouloir supprimer cette entreprise ?
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-cancel" data-bs-dismiss="modal">Annuler</button>
                                                <form method="post" action="{{ path('app_entreprise_delete', {'id': entreprise.id}) }}" style="display:inline-block;">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ entreprise.id) }}">
                                                    <button class="btn btn-confirm-delete">Confirmer la suppression</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center py-4" style="color: rgba(255, 255, 255, 0.5);">
                                Aucune entreprise trouvée.
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Bootstrap 5 JS for modals -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function() {
            const table = $('#entreprisesTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/fr-FR.json',
                    search: "",
                    zeroRecords: "Aucun résultat trouvé",
                    info: "",
                    infoEmpty: "",
                    infoFiltered: "",
                    lengthMenu: "",
                    paginate: {
                        previous: '<i class="bi bi-chevron-left"></i>',
                        next: '<i class="bi bi-chevron-right"></i>'
                    }
                },
                dom: 't<"d-flex justify-content-center mt-4"p>',
                pageLength: 10,
                ordering: false
            });

            // Connect the search input to DataTable search
            $('#tableSearch').on('keyup', function() {
                table.search(this.value).draw();
            });

            // Make search icon clickable
            $('.search-icon').css('cursor', 'pointer').on('click', function() {
                $('#tableSearch').focus();
            });
        });
    </script>
{% endblock %}

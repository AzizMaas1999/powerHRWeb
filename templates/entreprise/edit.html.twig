{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/intl-tel-input@18.2.1/build/js/intlTelInput.min.js"></script>
    <script>
        document.querySelector('#entreprise_matricule_fiscale').addEventListener('input', function(e) {
            let value = e.target.value.toUpperCase();
            
            // Remove any invalid characters
            value = value.replace(/[^0-9A-Z\/]/g, '');
            
            // Format the value
            let formatted = '';
            let numbers = value.replace(/[^0-9]/g, '');
            let letters = value.replace(/[^A-Z]/g, '');
            
            // Add the first 7 numbers
            formatted = numbers.slice(0, 7);
            
            // Add letters with slashes
            if (formatted.length === 7) {
                if (letters.length >= 1) {
                    formatted += '/' + letters[0];
                    if (letters.length >= 2) {
                        formatted += '/' + letters[1];
                        if (letters.length >= 3) {
                            formatted += '/' + letters[2];
                            // Add the last 3 numbers
                            if (numbers.length > 7) {
                                formatted += '/' + numbers.slice(7, 10);
                            }
                        }
                    }
                }
            }
            
            e.target.value = formatted;
        });

        document.addEventListener('DOMContentLoaded', function() {
            const phoneInput = document.getElementById('entreprise_phone_number');
            const iti = window.intlTelInput(phoneInput, {
                initialCountry: 'tn',
                preferredCountries: ['tn', 'fr', 'ma', 'dz', 'dz'],
                separateDialCode: true,
                utilsScript: "https://cdn.jsdelivr.net/npm/intl-tel-input@18.2.1/build/js/utils.js",
                customContainer: "iti-custom-container",
                customPlaceholder: function(selectedCountryPlaceholder, selectedCountryData) {
                    return "Entrez le numéro de téléphone";
                }
            });

            // Update the phone value when the country changes
            phoneInput.addEventListener('countrychange', function() {
                const countryData = iti.getSelectedCountryData();
                console.log('Country changed to:', countryData.name);
            });

            // Modify the send code function to use the full international number
            const sendBtn = document.getElementById('send-verification-btn');
            const sendStatus = document.getElementById('send-status');
            let phoneValue = '';

            if (sendBtn) {
                sendBtn.addEventListener('click', function() {
                    if (!iti.isValidNumber()) {
                        sendStatus.textContent = "Numéro de téléphone invalide";
                        sendStatus.style.color = "#ff4d4d";
                        return;
                    }

                    phoneValue = iti.getNumber();
                    console.log('[DEBUG] Envoyer le code clicked, phone:', phoneValue);
                    
                    sendStatus.textContent = "Envoi du code...";
                    sendStatus.style.color = "#0d6efd";

                    fetch('/api/sms/send', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'X-Requested-With': 'XMLHttpRequest',
                        },
                        body: JSON.stringify({ to: phoneValue })
                    })
                    .then(r => r.json())
                    .then(data => {
                        if (data.success) {
                            sendStatus.textContent = "Code envoyé !";
                            sendStatus.style.color = "#28a745";
                            showModal();
                        } else {
                            sendStatus.textContent = data.message || "Erreur l'envoi";
                            sendStatus.style.color = "#ff4d4d";
                        }
                    })
                    .catch(() => {
                        sendStatus.textContent = "Erreur réseau";
                        sendStatus.style.color = "#ff4d4d";
                    });
                });
            }

            // Modify the verify code function to use the full international number
            const verifyBtn = document.getElementById('verify-code-btn');
            const modal = document.getElementById('codeVerificationModal');
            const codeInput = document.getElementById('verification-code-input');
            const feedback = document.getElementById('code-verification-feedback');
            const successDiv = document.getElementById('code-verification-success');

            if (verifyBtn) {
                verifyBtn.addEventListener('click', function() {
                    const code = codeInput.value.trim();
                    if (!code || code.length < 4) {
                        feedback.textContent = "Code invalide";
                        feedback.style.display = "block";
                        successDiv.style.display = "none";
                        return;
                    }

                    fetch('/api/sms/verify', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'X-Requested-With': 'XMLHttpRequest',
                        },
                        body: JSON.stringify({ to: phoneValue, code: code })
                    })
                    .then(r => r.json())
                    .then(data => {
                        if (data.success) {
                            feedback.style.display = "none";
                            successDiv.style.display = "block";
                            document.querySelector('#entreprise_phone_verified').checked = true;
                            setTimeout(hideModal, 1200);
                        } else {
                            feedback.textContent = data.message || "Code incorrect";
                            feedback.style.display = "block";
                            successDiv.style.display = "none";
                        }
                    })
                    .catch(() => {
                        feedback.textContent = "Erreur réseau";
                        feedback.style.display = "block";
                        successDiv.style.display = "none";
                    });
                });
            }
        });
    </script>

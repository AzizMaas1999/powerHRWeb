{% extends 'base.html.twig' %}

{% block title %}Détails Paie{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-white">Détails de la paie</h1>
        <a href="{{ path('app_paie_index') }}" class="btn btn-outline-light">← Retour à la liste</a>
    </div>

    <div class="card bg-dark text-white shadow-lg">
        <div class="card-body">
            <table class="table table-dark table-striped border-white">
                <tbody>
                    <tr>
                        <th scope="row">Nombre de jours</th>
                        <td>{{ paie.nbJour }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Montant</th>
                        <td>{{ paie.montant }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Mois</th>
                        <td>{{ paie.mois }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Année</th>
                        <td>{{ paie.annee }}</td>
                    </tr>
                </tbody>
            </table>

            <div class="mt-4 d-flex justify-content-center gap-3">
                {{ include('paie/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}

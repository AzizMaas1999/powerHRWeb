{% extends 'base.html.twig' %}

{% block title %}Liste des Paies{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-white">Liste des paies</h1>
        <a href="{{ path('app_paie_new') }}" class="btn btn-success">+ Nouvelle paie</a>
    </div>

    <div class="table-responsive">
        <table class="table table-dark table-hover table-bordered align-middle shadow-sm">
            <thead class="table-light text-dark">
                <tr>
                    <th>Nombre de jours</th>
                    <th>Montant</th>
                    <th>Mois</th>
                    <th>Année</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for paie in paies %}
                    <tr>
                        <td>{{ paie.nbJour }}</td>
                        <td>{{ paie.montant }}</td>
                        <td>{{ paie.mois }}</td>
                        <td>{{ paie.annee }}</td>
                        <td class="text-center">
                            <a href="{{ path('app_paie_show', {'id': paie.id}) }}" class="btn btn-sm btn-outline-primary me-1">Afficher</a>
                            <a href="{{ path('app_paie_edit', {'id': paie.id}) }}" class="btn btn-sm btn-outline-warning">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center text-muted">Aucune paie trouvée.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}

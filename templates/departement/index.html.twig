{% extends 'base.html.twig' %}

{% block title %}Liste des Départements{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css">
    <style>
        .search-container {
            background: rgba(255, 255, 255, 0.02);
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
        }
        .search-wrapper {
            position: relative;
            margin-bottom: 15px;
        }
        .search-input {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            color: rgba(255, 255, 255, 0.9);
            border-radius: 6px;
            padding: 10px 15px 10px 40px;
            width: 100%;
            transition: all 0.3s ease;
        }
        .search-input:focus {
            border-color: rgba(255, 255, 255, 0.2);
            background: rgba(255, 255, 255, 0.08);
            box-shadow: 0 0 0 2px rgba(255, 255, 255, 0.05);
        }
        .search-input::placeholder {
            color: rgba(255, 255, 255, 0.4);
        }
        .search-icon {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: rgba(255, 255, 255, 0.4);
            pointer-events: none;
            font-size: 16px;
            z-index: 2;
        }
        .btn-add {
            padding: 6px 12px;
            font-size: 0.875rem;
            display: inline-flex;
            align-items: center;
            gap: 6px;
            float: right;
        }
        .btn-add i {
            font-size: 16px;
        }
        .table-container {
            background: rgba(255, 255, 255, 0.02);
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 24px rgba(0, 0, 0, 0.1);
        }
        .table {
            margin-bottom: 0;
        }
        .table thead th {
            background: rgba(255, 255, 255, 0.03);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            color: rgba(255, 255, 255, 0.7);
            font-weight: 500;
            padding: 15px;
            font-size: 0.95rem;
        }
        .table thead th::before,
        .table thead th::after {
            display: none !important;
        }
        .table tbody td {
            border-color: rgba(255, 255, 255, 0.03);
            padding: 15px;
            vertical-align: middle;
            color: rgba(255, 255, 255, 0.8);
        }
        .table tbody tr:hover {
            background: rgba(255, 255, 255, 0.03);
        }
        .pagination {
            margin: 20px 0 0 0;
            gap: 8px;
        }
        .page-link {
            background: rgba(255, 255, 255, 0.03);
            border: none;
            color: rgba(255, 255, 255, 0.6);
            border-radius: 6px;
            padding: 8px 12px;
            transition: all 0.2s ease;
            font-size: 1.1rem;
        }
        .page-link:hover {
            background: rgba(255, 255, 255, 0.08);
            color: rgba(255, 255, 255, 0.9);
        }
        .page-item.active .page-link {
            display: none;
        }
        .page-item.disabled .page-link {
            background: transparent;
            color: rgba(255, 255, 255, 0.3);
        }
        .modal-content {
            background: #191c24;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }
        .modal-header {
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }
        .modal-footer {
            border-top: 1px solid rgba(255, 255, 255, 0.1);
        }
        .modal-title {
            color: rgba(255, 255, 255, 0.9);
        }
        .modal-body {
            color: rgba(255, 255, 255, 0.7);
        }
        .btn-confirm-delete {
            background: #dc3545;
            color: white;
            border: none;
        }
        .btn-confirm-delete:hover {
            background: #bb2d3b;
        }
        .btn-cancel {
            background: rgba(255, 255, 255, 0.1);
            color: rgba(255, 255, 255, 0.7);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }
        .btn-cancel:hover {
            background: rgba(255, 255, 255, 0.15);
            color: rgba(255, 255, 255, 0.9);
        }
        .btn-view {
            background: rgba(13, 110, 253, 0.1);
            color: #0d6efd;
            border-color: rgba(13, 110, 253, 0.1);
        }
        .btn-view:hover {
            background: rgba(13, 110, 253, 0.2);
            color: #0d6efd;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="text-white">Départements</h1>
        </div>

        <div class="search-container">
            <div class="search-wrapper">
                <i class="bi bi-search search-icon"></i>
                <input type="text" id="tableSearch" class="form-control search-input" placeholder="Rechercher un département...">
            </div>
            <a href="{{ path('app_departement_new') }}" class="btn btn-success btn-action btn-add">
                <i class="bi bi-plus-circle"></i> + Ajouter département
            </a>
        </div>

        <div class="table-container">
            <div class="table-responsive">
                <table id="departementsTable" class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Description</th>
                            <th>Entreprise</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for departement in departements %}
                        <tr>
                            <td>{{ departement.id }}</td>
                            <td>{{ departement.nom }}</td>
                            <td>
                                {% if departement.description|length > 60 %}
                                    {{ departement.description|slice(0, 60) ~ '...' }}
                                {% else %}
                                    {{ departement.description }}
                                {% endif %}
                            </td>
                            <td>{{ departement.entreprise.nom }}</td>
                            <td class="text-center">
                                <a href="{{ path('app_departement_show', {'id': departement.id}) }}" class="btn btn-sm btn-outline-primary btn-action me-1">
                                    <i class="bi bi-eye"></i> Voir
                                </a>
                                <a href="{{ path('app_departement_edit', {'id': departement.id}) }}" class="btn btn-sm btn-outline-warning btn-action me-1">
                                    <i class="bi bi-pencil"></i> Modifier
                                </a>
                                <button type="button" class="btn btn-sm btn-outline-danger btn-action" data-bs-toggle="modal" data-bs-target="#deleteModal{{ departement.id }}">
                                    <i class="bi bi-trash"></i> Supprimer
                                </button>

                                <!-- Delete Modal -->
                                <div class="modal fade" id="deleteModal{{ departement.id }}" tabindex="-1" aria-labelledby="deleteModalLabel{{ departement.id }}" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="deleteModalLabel{{ departement.id }}">Confirmation de suppression</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                Êtes-vous sûr de vouloir supprimer ce département ?
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-cancel" data-bs-dismiss="modal">Annuler</button>
                                                <form method="post" action="{{ path('app_departement_delete', {'id': departement.id}) }}" style="display:inline-block;">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ departement.id) }}">
                                                    <button class="btn btn-confirm-delete">Confirmer la suppression</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center py-4" style="color: rgba(255, 255, 255, 0.5);">
                                Aucun département trouvé.
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Bootstrap 5 JS for modals -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function() {
            const table = $('#departementsTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/fr-FR.json',
                    search: "",
                    zeroRecords: "Aucun résultat trouvé",
                    info: "",
                    infoEmpty: "",
                    infoFiltered: "",
                    lengthMenu: "",
                    paginate: {
                        previous: '<i class="bi bi-chevron-left"></i>',
                        next: '<i class="bi bi-chevron-right"></i>'
                    }
                },
                dom: 't<"d-flex justify-content-center mt-4"p>',
                pageLength: 10,
                ordering: false
            });

            // Connect the search input to DataTable search
            $('#tableSearch').on('keyup', function() {
                table.search(this.value).draw();
            });

            // Make search icon clickable
            $('.search-icon').css('cursor', 'pointer').on('click', function() {
                $('#tableSearch').focus();
            });
        });
    </script>
{% endblock %}

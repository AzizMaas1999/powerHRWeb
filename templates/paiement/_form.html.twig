{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
    <div class="row g-3">
        {% for field in form %}
            {% if field.vars.name != '_token' %}
                <div class="col-12">
                    <div class="form-group mb-3">
                        {{ form_label(field, null, {'label_attr': {'class': 'form-label text-white'}}) }}
                        {{ form_widget(field, {'attr': {'class': 'form-control bg-dark text-white border-light'}}) }}
                        <div class="form-text text-danger small">
                            {{ form_errors(field) }}
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>

    <button class="btn btn-success mt-3">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}

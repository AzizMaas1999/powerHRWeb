{{ form_start(form, {'attr': {'class': 'form', 'novalidate': 'novalidate'}}) }}
    <div class="row">
        <div class="col-md-6 mb-3">
            <div class="form-group">
                {{ form_label(form.nom, 'Nom de l\'entreprise', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control' ~ (form.nom.vars.valid ? '' : ' is-invalid'), 'placeholder': 'Nom de l\'entreprise'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.nom) }}
                </div>
            </div>
        </div>
        
        <div class="col-md-6 mb-3">
            <div class="form-group">
                {{ form_label(form.matriculeFiscale, 'Matricule Fiscale', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.matriculeFiscale, {'attr': {'class': 'form-control' ~ (form.matriculeFiscale.vars.valid ? '' : ' is-invalid'), 'placeholder': 'Ex: 1234567/A/B/C/000'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.matriculeFiscale) }}
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <div class="form-group">
                {{ form_label(form.email, 'Adresse Email', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control' ~ (form.email.vars.valid ? '' : ' is-invalid'), 'placeholder': 'Email de contact principal'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.email) }}
                </div>
                <small class="form-text text-muted">Adresse email principale pour la communication</small>
            </div>
        </div>
        
        <div class="col-md-6 mb-3">
            <div class="form-group">
                {{ form_label(form.telephone, 'Téléphone', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.telephone, {'attr': {'class': 'form-control' ~ (form.telephone.vars.valid ? '' : ' is-invalid'), 'placeholder': 'Ex: +216 71 123 456'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.telephone) }}
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 mb-3">
            <div class="form-group">
                {{ form_label(form.adresse, 'Adresse', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.adresse, {'attr': {'class': 'form-control' ~ (form.adresse.vars.valid ? '' : ' is-invalid'), 'placeholder': 'Adresse complète'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.adresse) }}
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <div class="form-group">
                {{ form_label(form.siteWeb, 'Site Web', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.siteWeb, {'attr': {'class': 'form-control' ~ (form.siteWeb.vars.valid ? '' : ' is-invalid'), 'placeholder': 'Ex: https://www.example.com'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.siteWeb) }}
                </div>
                <small class="form-text text-muted">Optionnel</small>
            </div>
        </div>
        
        <div class="col-md-6 mb-3">
            <div class="form-group">
                {{ form_label(form.logo, 'Logo', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.logo, {'attr': {'class': 'form-control' ~ (form.logo.vars.valid ? '' : ' is-invalid')}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.logo) }}
                </div>
                <small class="form-text text-muted">Format recommandé: PNG, JPG - Max: 2Mo</small>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 mb-3">
            <div class="form-group">
                {{ form_label(form.notes, 'Notes', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.notes, {'attr': {'class': 'form-control' ~ (form.notes.vars.valid ? '' : ' is-invalid'), 'rows': 4, 'placeholder': 'Informations complémentaires...'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.notes) }}
                </div>
                <small class="form-text text-muted">Informations additionnelles, remarques ou détails spécifiques</small>
            </div>
        </div>
    </div>

    <div class="form-group mt-4">
        <button class="btn btn-primary">
            <i class="ti ti-device-floppy"></i> {{ button_label|default('Enregistrer') }}
        </button>
        <a href="{{ path('app_entrepriseadmin_index') }}" class="btn btn-secondary">
            <i class="ti ti-arrow-left"></i> Retour
        </a>
    </div>
{{ form_end(form) }}
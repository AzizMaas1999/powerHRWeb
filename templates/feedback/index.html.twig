{% extends 'base.html.twig' %}

{% block title %}Feedback index{% endblock %}

{% block body %}
    <h1 class="white-text">Feedback index</h1>

    <table class="table">
        <thead>
            <tr>
                <th class="white-text">Id</th>
                <th class="white-text">DateCreation</th>
                <th class="white-text">Type</th>
                <th class="white-text">Description</th>
                <th class="white-text">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for feedback in feedback %}
            <tr>
                <td class="white-text">{{ feedback.id }}</td>
                <td class="white-text">{{ feedback.dateCreation ? feedback.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
                <td class="white-text">{{ feedback.type }}</td>
                <td class="white-text">{{ feedback.description }}</td>
                <td>
                    <a href="{{ path('app_feedback_show', {'id': feedback.id}) }}" class="btn btn-sm btn-info">Show</a>
                    <a href="{{ path('app_feedback_edit', {'id': feedback.id}) }}" class="btn btn-sm btn-warning">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td class="white-text" colspan="5">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_feedback_new') }}" class="btn btn-success">Create new</a>
{% endblock %}
